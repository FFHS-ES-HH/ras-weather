##
# Configuration for piweather.
##
host = localhost
port = 4223

## The sensitivity for the temperature in Â°Celsius.
temperature-sensitivity = 0.1

## The sensitivity for the barometer in mbar.
barometer-sensitivity = 0.1

## The illuminance sensitivity in lux
illuminance-sensitivity = 1

## The humidity sensitivity in %
humidity-sensitivity = 0.1

## The temperature polling interval in msecs.
poll-interval = 1000

## The button to listen to
button = 0

## The path to the database
database = @localstatedir@/piweather/piweather.sqlite3

## The Interval in seconds to store the values.
store-interval = 300

## LCD Timeout in seconds
lcd-timeout = 180
